<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssafy.zipcheck.users.mapper.UserMapper">

    <resultMap id="userResultMap" type="com.ssafy.zipcheck.users.vo.User">
        <id property="userId" column="user_id"/>
        <result property="email" column="email"/>
        <result property="password" column="password"/>
        <result property="nickname" column="nickname"/>
        <result property="profile_image" column="profile_image"/>
        <result property="status" column="status"/>
        <result property="admin" column="admin"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>

    <select id="findByEmail" parameterType="string" resultMap="userResultMap">
        SELECT user_id, email, password, nickname, profile_image, status, admin, created_at, updated_at
        FROM users
        WHERE email = #{email}
        LIMIT 1
    </select>

    <select id="findById" parameterType="int" resultMap="userResultMap">
        SELECT user_id, email, password, nickname, profile_image, status, admin, created_at, updated_at
        FROM users
        WHERE user_id = #{userId}
        LIMIT 1
    </select>

    <insert id="save" parameterType="com.ssafy.zipcheck.users.vo.User" useGeneratedKeys="true" keyProperty="userId">
        INSERT INTO users (email, password, nickname, profile_image, status, admin, created_at, updated_at)
        VALUES (#{email}, #{password}, #{nickname}, #{profile_image}, #{status}, #{admin}, #{createdAt}, #{updatedAt})
    </insert>

    <delete id="deleteById" parameterType="int">
        DELETE FROM users WHERE user_id = #{userId}
    </delete>

</mapper>
