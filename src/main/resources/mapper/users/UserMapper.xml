<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ssafy.zipcheck.auth.users.mapper.UserMapper">

    <!-- 이메일 중복 확인 -->
    <select id="existsByEmail" resultType="int">
        SELECT COUNT(*) FROM users WHERE email = #{email}
    </select>

    <!-- 닉네임 중복 확인 -->
    <select id="existsByNickname" resultType="int">
        SELECT COUNT(*) FROM users WHERE nickname = #{nickname}
    </select>

    <!-- 회원가입 -->
    <insert id="insertUser">
        INSERT INTO users (
            email,
            password,
            nickname,
            profile_image,
            status,
            admin
        ) VALUES (
                     #{email},
                     #{password},
                     #{nickname},
                     #{profileImage},
                     1,
                     0
                 )
    </insert>

    <!-- 비밀번호 업데이트 -->
    <update id="updatePassword">
        UPDATE users
        SET password = #{newPassword},
            updated_at = NOW()
        WHERE user_id = #{userId}
    </update>

    <!-- 이메일로 User 조회 -->
    <select id="findByEmail" resultType="com.ssafy.zipcheck.auth.users.vo.User">
        SELECT *
        FROM users
        WHERE email = #{email}
    </select>

    <!-- ID로 User 조회 -->
    <select id="findById" resultType="com.ssafy.zipcheck.auth.users.vo.User">
        SELECT *
        FROM users
        WHERE user_id = #{userId}
    </select>

</mapper>
